{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "declaration": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./**/*.test.ts"
    ],
    "ts-node": {
        "transpileOnly": true
    }
}